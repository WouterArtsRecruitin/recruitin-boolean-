include README.md
include LICENSE
include requirements.txt
include DEPLOYMENT.md
include MANIFEST.in
include pyproject.toml

# Include package data
recursive-include recruitin_boolean *.py
recursive-include recruitin_boolean *.json
recursive-include recruitin_boolean *.yml
recursive-include recruitin_boolean *.yaml

# Include tests
recursive-include tests *.py
include test_simple.py

# Include CI/CD and Docker files
include .github/workflows/*.yml
include Dockerfile
include docker-compose.yml
include .gitignore

# Exclude development and cache files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude .git*
global-exclude *.egg-info/*
exclude .benchmarks/*
